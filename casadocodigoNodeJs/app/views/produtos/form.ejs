<html>
	<body>
		<div class="erros">
			<%if(errosValidacao){%>
				<ul>
					<%for(var i=0;i<errosValidacao.length;i++){%>
						<li><%=errosValidacao[i].param%> - <%=errosValidacao[i].msg%></li>
					<%}%>
				</ul>
			<%}%>
		</div>
		<form action="/produtos" method="post">
			<div>
				<label for="titulo">Título</label>
				<input type="text" id="titulo" name="titulo" value="<%=produto.titulo%>" placeholder="Coloque o título do livro" />
			</div>
			<div>
				<label for="precp">Preço</label>
				<input type="text" id="preco" name="preco" value="<%=produto.preco%>" placeholder="Coloque o preço do livro" />
			</div>
			<div>
				<label for="descricao">Descrição</label>
				<textarea cols="20" rows="10" id="descricao" value="<%=produto.descricao%>" name="descricao" placeholder="fale sobre o livro" /></textarea>
			</div>
			<input type="submit" value="gravar"/>
		</form>
	</body>
</html>